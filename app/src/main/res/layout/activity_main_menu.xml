<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_menu_title"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"

        android:textAlignment="center"
        android:layout_margin="15dp"
        android:padding="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_record_sighting"
        android:id="@+id/main_menu_record_sightings"
        android:layout_gravity="center_horizontal"
        android:onClick="startSightingMapActivity"
        android:layout_margin="10dp"
        android:padding="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_sightings_near_me"
        android:id="@+id/main_menu_sightings_near_me"
        android:layout_gravity="center_horizontal"
        android:onClick="startSightingsNearMeActivity"
        android:layout_margin="10dp"
        android:padding="15dp" />


</LinearLayout>
