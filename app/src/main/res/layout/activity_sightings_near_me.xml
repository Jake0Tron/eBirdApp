<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    tools:context=".SightingsNearMeActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/near_me_days_prior"
            android:id="@+id/radiusText"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/radiusPicker"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/radiusPicker"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/daysPriorText"
            android:layout_toRightOf="@+id/daysPriorText" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/near_me_radius"
            android:id="@+id/daysPriorText"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/daysPriorPicker"
            android:layout_toRightOf="@+id/daysPriorPicker" />
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/daysPriorPicker"
            android:layout_alignTop="@+id/radiusPicker"
            android:layout_toRightOf="@+id/radiusText"
            android:layout_toEndOf="@+id/radiusText" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_preview_square"
            android:id="@+id/near_me_submit"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:onClick="sightingsNearMeSubmit"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/radiusPicker"
            android:layout_toEndOf="@+id/radiusPicker"
            android:cropToPadding="false" />
    </RelativeLayout>



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jake.maps.SightingsNearMeActivity" />
</LinearLayout>